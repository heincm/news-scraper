<div class="jumbotron jumbotron-fluid">
    <div class="container">
        <h1 class="display-4">Totally Legit News Scraper</h1>
        <ul class="nav">
            <li class="nav-item">
                <a class="nav-link active" href="#">Home</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/saved">Saved Articles</a>
            </li>
        </ul>
        <form action="/scrape">
            <input type="submit" class="btn btn-primary" value="Scrape" />
        </form>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-body">
                    {{#each whatever}}
                    {{#unless this.saved}}
                    <h5 class="card-title">{{this.title}}</h5>
                    <p class="card-text"><a href="{{this.link}}">{{this.link}}</a></p>
                    <form action="/saved/{{this.id}}?_method=PUT" method="POST">
                        <input type="submit" class="btn btn-primary" />
                    </form>
                    <hr>
                    {{/unless}}
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
</div>