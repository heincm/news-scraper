<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <form action="/scrape">
                <input type="submit" class="btn btn-primary" value="Scrape" />
            </form>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-body">
                    {{#each whatever}}
                    {{#unless this.saved}}
                    <h5 class="card-title">{{this.title}}</h5>
                    <p class="card-text"><a href="{{this.link}}">{{this.link}}</a></p>
                    <form action="/saved/{{this.id}}?_method=PUT" method="POST">
                        <input type="submit" class="btn btn-primary" />
                    </form>
                    <hr>
                    {{/unless}}
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
</div>